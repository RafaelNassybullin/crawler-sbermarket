{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}